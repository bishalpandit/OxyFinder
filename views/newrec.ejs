<%- include('partials/header') %>

<div class="jumbotron border-bottom">

  <h2>Add Genuine Oxygen Suppliers</h2>
</div>

<form action="/newrec" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Supplier Name</label>
      <input type="text" class="form-control" id="supplierName" name="supplierName">
      <small class="form-text text-muted">The name of the oxygen supplier.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Phone Number</label>
        <input type="text" class="form-control" id="supplierNumber" name="supplierNumber">
        <small class="form-text text-muted">The phone number of the supplier/organisation.</small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Address</label>
        <input type="text" class="form-control" id="supplierAddress" name="supplierAddress">
        <small class="form-text text-muted">Address to locate the oxygen supplier.</small>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

 
